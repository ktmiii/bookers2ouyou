<h2>Books search for "params[:word]"</h2>

<table class="table table-hover table-inverse">
    <% if @range == "User" %>
   <thead>
     <tr>
       <th></th>
       <th>Name</th>
       <th>Introduction</th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= link_to(@user) do %>
         <%= image_tag user.get_profile_image, size:'50x50' %>
         <% end %></td>
       <td><%= link_to user.name, @user %></td>
       <td><%= user.introduction %></td>
     </tr>
     <% end %>
   </tbody>
   <% else %>
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%= link_to(@book.user) do %>
         <%= image_tag user.get_profile_image, size:'50x50' %>
         <% end %></td>
       <td><%= link_to book.title, @book %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
   </tbody>
   <% end %>
</table>